<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/type_4_selected" />
            <stroke
                android:width="1dp"
                android:color="@color/border" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/type_4" />
            <stroke
                android:width="1dp"
                android:color="@color/border" />
        </shape>
    </item>
</selector>