<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.contactaniserapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="csse3005.contactaniser.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="csse3005.contactaniser.activities.ChangePassword"
            android:label="@string/title_activity_change_password" >
        </activity>
        <activity
            android:name="csse3005.contactaniser.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <uses-library android:name="android.test.runner" />
        
    </application>
    
	<instrumentation 
        android:name="android.test.InstrumentationTestRunner"
    	android:targetPackage="com.example.ontactaniserapp"
    	android:label="Contactaniserapp-Test" />

</manifest>